<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/red_text"
        style="@style/fields"
        android:background="@color/colorRed"
        android:text="@string/RedText" />

    <EditText
        android:id="@+id/red_input"
        style="@style/Input_field"
        android:layout_toEndOf="@id/red_text"
        android:layout_alignBottom="@id/red_text"
        android:ems="10"
        android:hint="@string/color_hint"
        android:inputType="number"
        android:autofillHints="0" />

    <TextView
        android:id="@+id/green_text"
        android:layout_below="@id/red_text"
        android:layout_alignStart="@id/red_text"
        android:layout_alignEnd="@id/red_text"
        style="@style/fields"
        android:background="@color/colorGreen"
        android:text="@string/GreenText" />

    <EditText
        android:id="@+id/green_input"
        style="@style/Input_field"
        android:layout_toEndOf="@id/green_text"
        android:layout_alignBottom="@id/green_text"
        android:ems="10"
        android:hint="@string/color_hint"
        android:inputType="number"
        android:autofillHints="0" />

    <TextView
        android:id="@+id/blue_text"
        android:layout_below="@id/green_text"
        style="@style/fields"
        android:background="@color/colorBlue"
        android:text="@string/BlueText" />

    <EditText
        android:id="@+id/blue_input"
        style="@style/Input_field"
        android:layout_toEndOf="@id/blue_text"
        android:layout_alignBottom="@id/blue_text"
        android:ems="10"
        android:hint="@string/color_hint"
        android:inputType="number"
        android:autofillHints="0" />

    <TextView
        android:id="@+id/Coldisplay"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/blue_text"
        android:layout_marginTop="25dp"
        android:background="@color/light_gray"
        android:padding="20dp"
        android:text="@string/Label"
        android:textAlignment="center" />

</RelativeLayout>